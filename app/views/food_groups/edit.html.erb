<form action="/food_groups/<%= @food_group.id %>" method="post">
  <input type="visible" name="_method" value="PATCH" />
  <p>Update <%= @food_group.name %></p>
    <label for="name">Food Group Name:</label><br>
  <input type='text' name='food_group[name]'/><br/>
  <label for="rating_out_of_ten">Rating Out of Ten:</label><br>
  <input type='text' name='food_group[rating_out_of_ten]'/><br/>
  <label for="perishable">Is it Perishable:</label><br>
  <input type='text' name='food_group[perishable]'/><br/>
  <input type='submit' value='Update Food Group'/>
</form>