<form action="/beers/<%= @beer.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH" />
  <p>Update <%= @beer.name %></p>
  <label for="name">Beer Name:</label><br>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type='text' name='beer[name]'/><br/>
  <label for="abv">ABV:</label><br>
  <input type='text' name='beer[abv]'/><br/>
  <label for="is_an_ale">Is it an Ale?:</label><br>
  <input type='text' name='beer[is_an_ale]'/><br/>
  <input type='submit' value='Update Beer'/>
</form>
