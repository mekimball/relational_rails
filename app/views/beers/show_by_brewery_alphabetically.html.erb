<h1>Beers served by <%= @brewery.name %></h1>
<a href="/breweries/<%= @brewery.id %>/beers"><param name="alphabetical" value="true">Sort Alphabetically</param></a>
<ul>
  <% @beers.each do |beer| %>
    <li><%= beer.name %>: ABV - <%= beer.abv %>, Is an ale? - <%= beer.is_an_ale %></li>
  <% end %>
</ul>
<a href="/breweries/<%= @brewery.id %>/beers/new">Create Beer</a>